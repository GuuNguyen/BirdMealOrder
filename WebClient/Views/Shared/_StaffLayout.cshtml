    <div>
        @RenderBody()
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Admin/plugins/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/Admin/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/js/app-style-switcher.js"></script>
    <script src="~/Admin/js/waves.js"></script>
    <script src="~/Admin/js/sidebarmenu.js"></script>
    <script src="~/Admin/js/custom.js"></script>
    <script src="https://kit.fontawesome.com/13e30f44eb.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script>
          $(document).ready(function() {
              // Khi nhấp vào liên kết "Table"
              $('.sidebar-item > .sidebar-link').click(function(e) {
                  e.preventDefault();

                  // Tìm phần tử ul (menu con) tiếp theo
                  var submenu = $(this).next('.sidebar-submenu');

                  // Kiểm tra trạng thái hiện tại của menu con
                  if (submenu.is(':visible')) {
                      // Nếu đã hiển thị, ẩn đi
                      submenu.slideUp();
                  } else {
                      // Nếu đang ẩn, hiển thị lên
                      submenu.slideDown();
                  }
              });
          });
          document.addEventListener("DOMContentLoaded", function() {
          var link = document.querySelector(".profile-pic");
          var menu = document.querySelector(".menu");

          var isMenuVisible = false; // Biến lưu trạng thái hiển thị của menu

          link.addEventListener("click", function(event) {
            event.preventDefault();
            isMenuVisible = !isMenuVisible; // Đảo ngược trạng thái hiển thị menu

            if (isMenuVisible) {
              menu.style.display = "block";
            } else {
              menu.style.display = "none";
            }
          });

          document.addEventListener("click", function(event) {
            if (!link.contains(event.target) && event.target !== menu) {
              menu.style.display = "none";
              isMenuVisible = false; // Đặt lại trạng thái hiển thị menu khi click ra ngoài menu
            }
          });
        });
          function redirectToProductIndex() {
              window.location.href = "/Staff/Product_Index";
          }
          function redirectToUserIndex() {
              window.location.href = "/Staff/User_Index";
          }
          function redirectToMealIndex() {
              window.location.href = "/Staff/Meal_Index";
          }
          function redirectToBirdIndex() {
              window.location.href = "/Staff/Bird_Index";
          }
          function redirectToOrderIndex() {
              window.location.href = "/Staff/Order_Index";
          }
          function redirectToReport() {
              window.location.href = "/Staff/Report_Index";
          }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
    <style>
        .menu {
            display: none;
            position: absolute;
            background-color: #f1f1f1;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            border-radius: 5px; /* Để bo góc 5px */
            right: 10px; /* Để lệch trái 20px */
            padding: 10px; /* Để tạo khoảng cách giữa nội dung và viền menu */
        }

            .menu a {
                color: black;
                padding: 8px 12px;
                text-decoration: none;
                display: block;
            }

                .menu a:hover {
                    background-color: #ddd;
                    border-radius: 5px;
                }

                    .menu a:hover span {
                        color: #ff0000; /* Đổi màu chữ khi hover */
                    }

                    .menu a:hover::before {
                        content: "";
                        position: absolute;
                        top: 0;
                        left: 0;
                        width: 4px; /* Độ rộng của đường viền */
                        height: 100%;
                        background-color: #558b51; /* Màu của đường viền */
                    }
    </style>

</body>
</html>

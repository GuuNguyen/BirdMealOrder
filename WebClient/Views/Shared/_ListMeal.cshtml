@model BusinessObject.Models.Meal

@if (Model.MealStatus == BusinessObject.Enums.MealStatus.Available)
{
    <div class="grid-item-meal">
        <a class="a-text-link" asp-route-code="@Model.MealCode" asp-area="" asp-controller="Home" asp-action="Detail">
            <div class="item-image">
                <img src="@Model.MealImage" alt="@Model.MealName" />
            </div>
            <div class="item-details">
                <h5>@Model.MealName</h5>
                <p>
                    <i class="fa-solid fa-dollar-sign"></i>
                    @Model.Price.ToString("0.00")
                </p>
            </div>
        </a>
        @if (Model.QuantityAvailable == 0)
        {
            <div class="out-of-stock">
                <p>Out of stock</p>
            </div>
        }
        else
        {
            <button class="button-atc" data-code="@Model.MealCode">
                <span>Add to cart</span>
                <div class="cart">
                    <svg viewBox="0 0 36 26">
                        <polyline points="1 2.5 6 2.5 10 18.5 25.5 18.5 28.5 7.5 7.5 7.5"></polyline>
                        <polyline points="15 13.5 17 15.5 22 10.5"></polyline>
                    </svg>
                </div>
            </button>
        }
    </div>
}


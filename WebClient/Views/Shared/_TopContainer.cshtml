<div class="hero-filter d-flex align-items-center justify-content-end" data-page-type="@Model.PageType">
    <div>
        <div id="filterButton" class="btn-filter">
            <p>SORT BY</p>
            <i class="fa-solid fa-arrow-down-wide-short fa-flip-horizontal"></i>
        </div>
        <div id="filterTable" style="display: none;">
            <h4 style="font-size: 25px; font-weight: bold; margin-bottom: 1em;">SORT BY</h4>
            <div class="d-flex gap-5">
                <div class="d-flex flex-column gap-4" style="width: 40%;">
                    <h4>PRICE</h4>
                    <div class="choose">
                        <div class="pretty p-default p-round p-bigger p-smooth">
                            <input type="radio" name="price" value="0-10" />
                            <div class="state p-danger-o">
                                <label>$0 - $9,99</label>
                            </div>
                        </div>
                        <div class="pretty p-default p-round p-bigger p-smooth">
                            <input type="radio" name="price" value="10-20" />
                            <div class="state p-warning-o">
                                <label>$10,00 - $19,99</label>
                            </div>
                        </div>
                        <div class="pretty p-default p-round p-bigger p-smooth">
                            <input type="radio" name="price" value="20" />
                            <div class="state p-success-o">
                                <label>more than $19,99</label>
                            </div>
                        </div>
                    </div>
                </div>
                @if (Model.Birds != null)
                {
                    <div class="d-flex flex-column gap-4">
                        <h4>BIRD</h4>
                        <div class="bird-sort-container">
                            @foreach (var item in Model.Birds)
                            {
                                <div class="birt-sort-item">
                                    <div class="pretty p-default">
                                        <input type="checkbox" name="birdId" value="@item.BirdId" />
                                        <div class="state">
                                            <label>@item.BirdName</label>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
            <div class="d-flex justify-content-end">
                <button class="btn-apply-filter" id="applyFilterButton">APPLY SORT</button>
            </div>
        </div>
    </div>
</div>
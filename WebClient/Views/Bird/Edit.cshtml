@model BusinessObject.Models.Bird

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<div class="product-edit">
    <div>
        <div class="row">
            <div class="col-lg-6 col-md-4 product-edit-item">
                <h1>Edit bird</h1>
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="BirdId" />
                    <div class="col-lg-6 form-group">
                        <label asp-for="BirdName" class="control-label"></label>
                        <input asp-for="BirdName" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="BirdImage" class="control-label"></label>
                        <div class="product-edit-item-image row">
                            <div class="col-lg-9">
                                <input type="file" id="birdimage" name="birdImage" accept="image/*" class="form-control" onchange="handleImageUpload(event)">
                            </div>
                            <div class="col-lg-3">
                                <img id="product-image-preview" style="height: 100px" src="@Model.BirdImage" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="product-edit-item-submit_toBack">
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                        <div>
                            <a class="btn btn-primary" asp-action="Bird_Index" asp-controller="Staff">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-6 product_edit_item_image">
                <img class="background-image-product-edit" src="~/Admin/plugins/images/image-product-create-2.jpg" />
            </div>
        </div>
    </div>
</div>

<script>
    function handleImageUpload(event) {
        var input = event.target;
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                var imageElement = document.querySelector("#product-image-preview");
                imageElement.src = e.target.result;
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
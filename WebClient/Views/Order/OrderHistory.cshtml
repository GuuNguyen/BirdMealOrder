                                </div>
                                <div class="container-total-text">Total: </div>
                                <div class="container-total-number">@item.Order.TotalPrice?.ToString("0.00")</div>
                            </div>
                        </div>
                        <div class="container-footer-order">
                            <div class="content-left-footer">
                                <div>@item.Order.OrderDetails.Count() products in this order</div>
                            </div>
                            <div class="content-right-footer">
                                @if (!item.AllReview && item.Order.Status == BusinessObject.Enums.OrderStatus.Completed)
                                {
                                    <div class="btn-right-footer">
                                        <a asp-action="OrderDetail" asp-route-orderId="@item.Order.OrderId" class="btn btn-content">FeedBack</a>
                                    </div>
                                }
                                <div class="btn-right-footer">
                                    <a asp-action="OrderDetail" asp-route-orderId="@item.Order.OrderId" class="btn btn-content">View All</a>
                                </div>
                                
                                
                            </div>
                        </div>

                    </div>

                }
            }

        </div>
    </div>
</div>

<style>
    .img-fluid {
        width: 180px;
        height: 120px;
    }
    .container-order {
        margin: 23px 0;
        box-shadow: 0 1px 1px 0 rgba(0,0,0,.05);
        border-radius: 0.125rem;
        background-color: #f5f7f5;
    }

    .img-notOrder {
        background-position: 50%;
        background-size: contain;
        background-repeat: no-repeat;
        width: 100px;
        height: 100px;
        background-image: url(https://deo.shopeemobile.com/shopee/shopee-pcmall-live-sg/5fafbb923393b712b96488590b8f781f.png);
    }

    .container-content-notOrder {
        box-shadow: 0 1px 1px 0 rgba(0,0,0,.05);
        border-radius: 0.125rem;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        background: #fff;
    }

    .text-notOrder {
        margin: 20px 0 0;
        font-size: 18px;
        line-height: 1.4;
        color: rgba(0,0,0,.8);
    }

    .container-status-order {
        width: 100%;
        margin-bottom: 12px;
        display: flex;
        overflow: hidden;
        position: -webkit-sticky;
        position: sticky;
        top: 0;
        z-index: 10;
        background: #fff;
        border-top-left-radius: 2px;
        border-top-right-radius: 2px;
    }

    .status-order {
        cursor: pointer;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        padding: 16px 0;
        font-size: 16px;
        line-height: 19px;
        text-align: center;
        color: rgba(0,0,0,.8);
        background: #fff;
        border-bottom: 2px solid rgba(0,0,0,.09);
        display: flex;
        flex: 1;
        overflow: hidden;
        align-items: center;
        justify-content: center;
        transition: color .2s;
    }

        .status-order:hover {
            color: #16cc0c;
        }

    .status-all {
        color: #16cc0c;
        border-color: #16cc0c;
    }

    .unit-price {
        color: #538a50;
        margin-top: 25px;
    }

    .container-footer-order {
        padding: 12px 24px 18px;
        display: flex;
        flex-wrap: nowrap;
        justify-content: space-between;
        align-content: center;
        background: #f5f7f5;
    }

    .content-left-footer {
        min-width: 300px;
        max-width: 400px;
        display: flex;
        align-items: center;
        grid-gap: 4px;
        gap: 4px;
        flex-grow: 1;
        word-wrap: break-word;
        text-align: left;
        font-size: 12px;
        line-height: 16px;
        color: rgba(0,0,0,.54);
    }

    .content-right-footer {
        display: flex;
    }

    .btn-right-footer {
        margin: 0 0 0 10px;
        display: flex;
        align-items: center;
        text-overflow: ellipsis;
    }

    .row2-order {
        margin-top: 10px;
        width: 100%;
        height: 0;
        border-bottom: 1px dotted rgba(0,0,0,.09);
        position: relative;
    }

    .total {
        padding: 15px 24px 10px;
        background: #f5f7f5;
    }

    .total-content {
        display: flex;
        justify-content: flex-end;
        align-items: center;
    }

    .btn-content {
        color: #555;
        border: 1px solid #538a50;
        font-weight: 400;
        font-size: 14px;
        border-radius: 4px;
        padding: 8px 10px;
    }

        .btn-content:hover {
            color: white;
            background-color: #538a50;
        }

    .container-icon-total {
        cursor: pointer;
        user-select: none;
        margin: 0 5px 0 0;
        line-height: 0;
    }

    .container-total-text {
        margin: 0 10px 0 0;
        font-size: 14px;
        line-height: 20px;
        color: rgba(0,0,0,.8);
    }

    .container-total-number {
        color: #538a50;
        font-size: 24px;
        line-height: 30px;
    }

    .line {
        box-sizing: border-box;
        background: #f5f5f5;
        width: 0.4375rem;
        height: 0.4375rem rem;
        border-radius: 50%;
        z-index: 1;
        position: absolute;
        top: 0;
    }

    .line-left {
        left: 0;
        transform: translate(-50%,-50%);
    }

    .line-right {
        right: 0;
        transform: translate(50%,-50%);
    }
</style>

@section scripts {
    <script>
        function filterOrders(status) {
            var statusOrders = document.getElementsByClassName("status-order");

            // Xóa lớp CSS "status-all" khỏi tất cả các thẻ
            for (var i = 0; i < statusOrders.length; i++) {
                statusOrders[i].classList.remove("status-all");
            }

            // Thêm lớp CSS "status-all" cho thẻ vừa chọn
            var selectedStatusOrder = document.querySelector('[title="' + status + '"]');
            selectedStatusOrder.classList.add("status-all");

            $('.status-order').removeClass('active');
            $('.status-order[data-status="' + status + '"]').addClass('active');

            $('.container-order').hide();
            if (status === 'All') {
                $('.container-order').show();
            } else {
                $('.container-order[data-status="' + status + '"]').show();
            }
        }
    </script>
        }